    <input type="search" id="form1" class="form-control" placeholder="Type your fistro de la pradera" name="user" value="{{user}}" />
    
  </div>
  <button type="submit" class="btn btn-primary"><i class="fas fa-search fa-fw"></i></button>
</div>
</form> 

{{#each tweetsList as |tweet|}}

<div>    
  
  <div class="card-body">
    <small class="text-muted">{{tweet.user}} | Say on {{tweet.createdAt}}  </small>  
    <p class="card-text">"{{tweet.message}}"</p>
  
  </div> 
</div>

{{/each}}

{{> createtweet}}

</div>